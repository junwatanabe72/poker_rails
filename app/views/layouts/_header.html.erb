<header class="l-header">
  <h1>
    <a href="/"><%= title %></a>
  </h1>

  <nav class="pc-nav">
    <ul>
      <% if logged_in? %>
      <li class="font-size-sp"><%= link_to "users", users_path %></li>
      <li class="font-size-sp"><%= link_to "#{current_user.name}", current_user %></li>
      <li class="font-size-sp"><%= link_to 'logout', logout_path, method: :delete %></li>
      <% else %>
      <li class="font-size-sp"><%= link_to 'signup', signup_path %></li>
      <li class="font-size-sp"><%= link_to "login", login_path %></li>
      <% end %>
    </ul>
  </nav>

</header>