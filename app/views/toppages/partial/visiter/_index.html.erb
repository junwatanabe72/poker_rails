<h2 class="font-size-logo">A simple poker game</h2>
<% texts = ["User registration is required to play",
  "Please register and login to enjoy"]%>
<ol>
  <% texts.each{|text| %>
  <li class="font-size-list"><%=text %></li>
  <% } %>
</ol>
<div class="TB-micro-padding"></div>
<div class="l-flex">
  <%= link_to 'sign up', signup_path,class: 'button button-primary' %>
  <div class="LR-micro-padding"></div>
  <%= link_to 'login', login_path,class: 'button button-secondary' %>
</div>